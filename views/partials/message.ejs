<% for(let index in messages){
    let message_data = messages[index];
%>
<div class="posted_message">
    <p>
        <span class="user_info"><%= message_data.first_name %> <%= message_data.last_name %></span> - 
        <span class="date"><%= message_data.posted_date %></span>
    </p>
    <p class="message"><%= message_data.message %></p>

    <div class="comment_board">
        <% if(comments_json) { 
            let comments = comments_json[message_data.message_id]; %>

            <%- include('../partials/comment.ejs', {comments, current_user}) %>
        <% } %>
    </div>

    <div class="comment_area">
        <p>Post a comment</p>
        <form action="/comments/post" method="post" class="comment_form">
            <input type="hidden" name="message_id" value="<%= message_data.message_id %>">
            <textarea name="comment" cols="30" rows="10"></textarea>
            <button type="submit">Post Comment!</button>
        </form>
    </div>

</div>
<% } %>