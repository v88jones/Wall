<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <script src="/javascripts/jquery-3.6.1.min.js"></script>
    <script src="/javascripts/dashboard_sript.js"></script>
    <link rel="stylesheet" href="/stylesheets/dashboard.css">
</head>
<body>
    <div id="navbar">
        <h1>Wall</h1>
        <span class="user_info">Welcome! <%= current_user.first_name %> <%= current_user.last_name %></span>
        <a href="/logout">Logout</a>
    </div>
    <div id="main">
        <div id="post_message">
            <p>Post a message</p>
            <form action="/messages/post" method="post" id="message_form">
                <textarea name="message" id="" cols="30" rows="10"></textarea>
                <button type="submit">Post Message!</button>
            </form>
        </div>
        <div id="message_board">
            <%- include('./partials/message.ejs', {current_user, messages, comments_json}) %>
        </div>
    </div>
</body>
</html>